{% extends 'layout.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': "Nom d'utilisateur"}}) }}
        {{ form_row(form.email, {'label': 'Votre adresse e-mail', 'attr': {'placeholder': "E-mail"}})  }}
        {{ form_row(form.password, {'label': 'Votre mot de passe', 'attr': {'placeholder': "Mot de passe"}})  }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer mot de passe', 'attr': {'placeholder': "Confirmation du mot de passe"}})  }}

        <button type="submit" class="btn btn-success">S'inscrire</button>

    {{ form_end(form) }}
{% endblock %}